            display: flex; flex-direction: column;
        }
        #app-frame-container.active { transform: translate3d(0, 0, 0); }
        .app-bar { height: 56px; display: flex; align-items: center; padding: 0 20px; background: rgba(10, 10, 15, 0.95); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(255, 255, 255, 0.08); }
        .back-button { display: flex; align-items: center; color: #fff; font-size: 15px; font-weight: 600; cursor: pointer; }
        .back-button svg { margin-right: 10px; width: 22px; }
        iframe { flex: 1; width: 100%; border: none; background: #111; }

        /* SETTINGS MODAL */
        #settings-modal {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: #000; z-index: 300;
            transform: translateY(100%); transition: transform 0.4s ease;
            display: flex; flex-direction: column;
        }
        #settings-modal.active { transform: translateY(0); }
        
        .settings-header {
            padding: 20px; display: flex; justify-content: space-between; align-items: center;
            background: rgba(20, 20, 20, 0.9); border-bottom: 1px solid var(--border-color);
        }
        .settings-title { font-size: 20px; font-weight: 700; }
        .close-settings { color: #f43f5e; font-weight: 600; cursor: pointer; }
        
        .settings-content {
            flex: 1; overflow-y: auto; padding: 20px;
        }
        .form-group { margin-bottom: 20px; }
        .form-label { display: block; font-size: 12px; color: var(--text-sub); margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; }
        .form-input {
            width: 100%; background: var(--input-bg); border: none; border-bottom: 1px solid var(--border-color);
            color: #fff; padding: 12px; font-size: 16px; border-radius: 8px 8px 0 0;
        }
        .form-input:focus { border-bottom-color: #3b82f6; background: rgba(255,255,255,0.15); }
        
        .card-edit-block {
