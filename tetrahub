        .btn-save {
            width: 100%; background: #3b82f6; color: white; padding: 15px;
            font-weight: 700; border: none; font-size: 16px; margin-top: 20px;
            border-radius: 12px; cursor: pointer;
        }
        .btn-reset {
            width: 100%; background: transparent; color: #f43f5e; padding: 15px;
            font-weight: 600; border: 1px solid #f43f5e; font-size: 14px; margin-top: 10px;
            border-radius: 12px; cursor: pointer; margin-bottom: 30px;
        }

        /* Animations */
        @keyframes cardEnter { from { opacity: 0; transform: translateY(40px) rotateX(20deg); } to { opacity: 1; transform: translateY(0) rotateX(0); } }
        @keyframes floatEmoji { 0%, 100% { transform: translateY(0) rotate(-5deg); } 50% { transform: translateY(-15px) rotate(5deg); } }
        @keyframes textReveal { to { opacity: 1; transform: translateY(0); } }
        @keyframes lightWave { 0% { left: -100%; } 50% { left: 200%; } 100% { left: 200%; } }
        @keyframes titleBreath { 0%, 100% { transform: scale(1); text-shadow: 0 0 20px rgba(255, 255, 255, 0.3); } 50% { transform: scale(1.03); text-shadow: 0 0 35px rgba(255, 255, 255, 0.6); } }
