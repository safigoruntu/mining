    <!-- Splash Screen -->
    <div id="splash-screen">
        <div class="splash-content">
            <span class="splash-emoji" id="splash-emoji"></span>
            <div class="splash-title" id="splash-title"></div>
        </div>
    </div>

    <!-- Dashboard -->
    <div id="dashboard">
        <div class="header-container">
            <div class="header-texts">
                <h1 id="main-title">TetraFund</h1>
                <p id="sub-title">EcoSystem Hub</p>
            </div>
            <div class="settings-btn" onclick="openSettings()">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
        </div>
        <div id="cards-wrapper"></div>
    </div>

    <!-- App Browser (Iframe) -->
    <div id="app-frame-container">
        <div class="app-bar">
            <div class="back-button" onclick="closeApp()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                Back to Dashboard
            </div>
        </div>
        <iframe id="main-frame" src=""></iframe>
    </div>

    <!-- Settings Modal -->
    <div id="settings-modal">
        <div class="settings-header">
            <div class="settings-title">App Configuration</div>
            <div class="close-settings" onclick="closeSettings()">Close</div>
        </div>
        <div class="settings-content">
            <div class="form-group">
                <label class="form-label">Main Title</label>
                <input type="text" id="input-main-title" class="form-input">
            </div>
            <div class="form-group">
                <label class="form-label">Sub Title</label>
                <input type="text" id="input-sub-title" class="form-input">
            </div>
            
            <div id="card-settings-list"></div>

            <button class="btn-save" onclick="saveConfig()">Save & Apply</button>
            <button class="btn-reset" onclick="resetConfig()">Reset to Default</button>
        </div>
    </div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();
        tg.enableClosingConfirmation();
        tg.setHeaderColor('#000000');

        // Default Config
        const defaultConfig = {
            mainTitle: "TetraFund",
            subTitle: "EcoSystem Hub",
            cards: [
                { id: 1, title: "Airdrop", desc: "Claim Daily Rewards", url: "https://tetrafundtoken.com/beta/airdrop", emoji: "ðŸª‚", color: "#fbbf24", icon: "path" },
                { id: 2, title: "TetraGame", desc: "Play & Earn Crypto", url: "https://tetrafundtoken.com/beta/tetragames", emoji: "ðŸŽ®", color: "#f43f5e", icon: "rect" },
                { id: 3, title: "TetraSocial", desc: "Community Hub", url: "https://tetrafundtoken.com/beta/tetrasocial", emoji: "ðŸŒ", color: "#3b82f6", icon: "circle" },
                { id: 4, title: "Staking", desc: "High APY Yields", url: "https://tetrafundtoken.com/beta/staking", emoji: "ðŸ¦", color: "#10b981", icon: "line" },
                { id: 5, title: "Swap", desc: "Instant Exchange", url: "https://tetrafundtoken.com/beta/swap", emoji: "ðŸ”„", color: "#d946ef", icon: "arrow" },
                { id: 6, title: "Profile", desc: "Settings & Wallet", url: "https://tetrafundtoken.com/beta/profile", emoji: "ðŸ‘¤", color: "#ffffff", icon: "user" }
            ]
        };

        // State Management
        let config = JSON.parse(localStorage.getItem('tetraConfig')) || defaultConfig;

        // Elements
        const dashboard = document.getElementById('dashboard');
        const cardsWrapper = document.getElementById('cards-wrapper');
        const appContainer = document.getElementById('app-frame-container');
        const iframe = document.getElementById('main-frame');
        const splashScreen = document.getElementById('splash-screen');
        const splashEmoji = document.getElementById('splash-emoji');
        const splashTitle = document.getElementById('splash-title');
        const settingsModal = document.getElementById('settings-modal');

        // Render Functions
        function renderDashboard() {
            document.getElementById('main-title').innerText = config.mainTitle;
            document.getElementById('sub-title').innerText = config.subTitle;
            
            cardsWrapper.innerHTML = '';
            
            config.cards.forEach((card, index) => {
                const delay = index * 0.05;
                const cardHtml = document.createElement('div');
                cardHtml.className = 'card-container';
                cardHtml.style.animationDelay = `${delay}s`;
                
                cardHtml.innerHTML = `
                    <div class="card" style="--card-color: ${card.color}" 
                        onclick="openApp('${card.url}', '${card.title}', '${card.emoji}', '${card.color}')">
                        <div class="icon-box">${card.emoji}</div>
                        <div class="content">
                            <div class="title">${card.title}</div>
                            <div class="desc">${card.desc}</div>
                        </div>
                        <div class="arrow">
                             <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
                        </div>
                    </div>
                `;
                
                const cardEl = cardHtml.querySelector('.card');
                
                // Tilt Event Listeners
                cardEl.addEventListener('mousemove', (e) => handleTilt(e, cardEl));
                cardEl.addEventListener('touchmove', (e) => handleTilt(e, cardEl));
                cardEl.addEventListener('mouseleave', () => resetTilt(cardEl));
                cardEl.addEventListener('touchend', () => resetTilt(cardEl));

                cardsWrapper.appendChild(cardHtml);
            });
        }

        function renderSettings() {
            document.getElementById('input-main-title').value = config.mainTitle;
            document.getElementById('input-sub-title').value = config.subTitle;
            
            const list = document.getElementById('card-settings-list');
            list.innerHTML = '';
            
            config.cards.forEach((card, index) => {
                const block = document.createElement('div');
                block.className = 'card-edit-block';
                block.innerHTML = `
                    <div class="card-edit-header">Button ${index + 1}</div>
                    <div class="form-group">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-input inp-title" value="${card.title}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-input inp-desc" value="${card.desc}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">URL (https://...)</label>
                        <input type="text" class="form-input inp-url" value="${card.url}">
                    </div>
                    <div class="row">
                        <div class="form-group" style="flex:1">
                            <label class="form-label">Emoji</label>
                            <input type="text" class="form-input inp-emoji" value="${card.emoji}">
                        </div>
                        <div class="form-group" style="flex:1">
                            <label class="form-label">Color (Hex)</label>
                            <input type="text" class="form-input inp-color" value="${card.color}">
                        </div>
                    </div>
                `;
                list.appendChild(block);
            });
        }

        // Logic
        function handleTilt(e, card) {
            const rect = card.getBoundingClientRect();
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            
            const x = clientX - rect.left;
            const y = clientY - rect.top;
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = ((y - centerY) / centerY) * -12; 
            const rotateY = ((x - centerX) / centerX) * 12;
            card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
        }

        function resetTilt(card) {
            card.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)`;
        }

        function openApp(url, title, emoji, color) {
            if(tg.HapticFeedback) tg.HapticFeedback.impactOccurred('heavy');
            
            splashEmoji.innerText = emoji;
            splashTitle.innerText = title;
            splashTitle.style.color = color;
            splashTitle.style.textShadow = `0 0 25px ${color}`;
            
            splashScreen.classList.add('active');
            dashboard.style.transform = 'scale(0.85)';
            dashboard.style.opacity = '0';

            setTimeout(() => {
                iframe.src = url;
                appContainer.classList.add('active');
                splashScreen.classList.remove('active');
                tg.BackButton.show();
                tg.BackButton.onClick(closeApp);
            }, 1500);
        }

        function closeApp() {
            appContainer.classList.remove('active');
            dashboard.style.transform = 'scale(1)';
            dashboard.style.opacity = '1';
            setTimeout(() => { iframe.src = ''; }, 400);
            if(tg.HapticFeedback) tg.HapticFeedback.impactOccurred('light');
            tg.BackButton.hide();
            tg.BackButton.offClick(closeApp);
        }

        // Settings Logic
        function openSettings() {
            renderSettings();
            settingsModal.classList.add('active');
        }

        function closeSettings() {
            settingsModal.classList.remove('active');
        }

        function saveConfig() {
            const newConfig = {
                mainTitle: document.getElementById('input-main-title').value,
                subTitle: document.getElementById('input-sub-title').value,
                cards: []
            };

            const blocks = document.querySelectorAll('.card-edit-block');
            blocks.forEach(block => {
                newConfig.cards.push({
                    title: block.querySelector('.inp-title').value,
                    desc: block.querySelector('.inp-desc').value,
                    url: block.querySelector('.inp-url').value,
                    emoji: block.querySelector('.inp-emoji').value,
                    color: block.querySelector('.inp-color').value,
                });
            });

            config = newConfig;
            localStorage.setItem('tetraConfig', JSON.stringify(config));
            renderDashboard();
            closeSettings();
        }

        function resetConfig() {
            if(confirm('Reset all settings to default?')) {
                config = defaultConfig;
                localStorage.removeItem('tetraConfig');
                renderDashboard();
                closeSettings();
            }
        }

        // Init
        renderDashboard();
    </script>
</body>
</html>
