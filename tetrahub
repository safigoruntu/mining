        #splash-screen.active { opacity: 1; pointer-events: all; }
        #splash-screen.active .splash-content { transform: scale(1); }
        .splash-content { text-align: center; transform: scale(0.8); transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1); }
        .splash-emoji { font-size: 80px; margin-bottom: 20px; display: block; filter: drop-shadow(0 0 40px rgba(255,255,255,0.4)); animation: floatEmoji 2s ease-in-out infinite; }
        .splash-title { font-size: 32px; font-weight: 900; color: #fff; text-transform: uppercase; letter-spacing: 2px; text-shadow: 0 0 25px currentColor; opacity: 0; transform: translateY(20px); }
        #splash-screen.active .splash-title { animation: textReveal 0.6s ease forwards 0.2s; }

        #app-frame-container {
